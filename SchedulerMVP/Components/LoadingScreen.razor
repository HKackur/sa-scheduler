@* Loading screen with spinner - shown during initial app load *@
@if (IsLoading)
{
    <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: #ffffff; z-index: 10000; display: flex; align-items: center; justify-content: center; flex-direction: column; gap: 16px;">
        <div style="width: 48px; height: 48px; border: 4px solid #f3f4f6; border-top-color: #3b82f6; border-radius: 50%; animation: loading-spin 0.8s linear infinite;"></div>
        <div style="font-size: 16px; font-weight: 500; color: #374151;">@LoadingMessage</div>
    </div>
}

<style>
    @@keyframes loading-spin {
        to { transform: rotate(360deg); }
    }
</style>

@code {
    [Parameter] public bool IsLoading { get; set; }
