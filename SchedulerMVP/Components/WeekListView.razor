@using SchedulerMVP.Data
@using SchedulerMVP.Data.Entities
@using SchedulerMVP.Services
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<AppDbContext> DbFactory
@inject UIState UI
@inject UserContextService UserContext
@inject IClubService ClubService

<div class="week-list-container">
    <div class="print-title">@printTitle</div>
    @for (int day = 1; day <= 7; day++)
    {
        <div class="day-section">
            <h3 class="day-title">@GetDayName(day)</h3>
            
            @if (groupedTemplates != null && groupedTemplates.ContainsKey(day) && groupedTemplates[day].Any())
            {
                @foreach (var timeGroup in groupedTemplates[day])
                {
                    @foreach (var locationGroup in timeGroup.Value)
                    {
                        @foreach (var template in locationGroup.Value)
                        {
                            <div class="booking-row">
                                <div class="time-col">@FormatTime(template.StartMin) - @FormatTime(template.EndMin)</div>
                                <div class="group-col">
                                    @if (template.Group != null)
                                    {
                                        <div class="group-name-with-icon">
                                            <div class="group-color-icon" style="@GetGroupColorBoxStyle(template.Group)"></div>
                                            <span>@template.Group.Name</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span>Okänd grupp</span>
                                    }
                                </div>
                                <div class="location-col"><span>@($"{template.Area?.Place?.Name ?? "Okänd plats"} / {template.Area?.Name ?? "Okänd yta"}")</span></div>
                            </div>
                        }
                    }
                }
            }
            else
            {
                <div class="no-bookings">Inga bokningar denna dag</div>
            }
        </div>
    }
</div>

@code {
    private Dictionary<int, Dictionary<int, Dictionary<string, List<BookingTemplate>>>>? groupedTemplates;
    private string printTitle = "Veckoschema";
    
    protected override async Task OnInitializedAsync()
    {
        UI.OnChanged += OnUIChanged;
        await LoadDataAsync();
        await UpdatePrintTitleAsync();
    }
    
    public void Dispose()
    {
        UI.OnChanged -= OnUIChanged;
    }
    
    private async void OnUIChanged()
    {
        await LoadDataAsync();
        await UpdatePrintTitleAsync();
        await InvokeAsync(StateHasChanged);
    }
    
    private async Task UpdatePrintTitleAsync()
    {
        try
        {
            var clubId = await UserContext.GetCurrentUserClubIdAsync();
            if (clubId.HasValue)
            {
                await using var db = await DbFactory.CreateDbContextAsync();
                var club = await db.Clubs
                    .AsNoTracking()
                    .FirstOrDefaultAsync(c => c.Id == clubId.Value);
                
                if (club != null && !string.IsNullOrWhiteSpace(club.Name))
                {
                    printTitle = $"Veckoschema - {club.Name}";
                }
                else
                {
                    printTitle = "Veckoschema";
                }
            }
            else
            {
                printTitle = "Veckoschema";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating print title: {ex.Message}");
            printTitle = "Veckoschema";
        }
    }
    
    private async Task LoadDataAsync()
    {
        try
        {
            if (!UI.SelectedTemplateId.HasValue) return;
            
            await using var db = await DbFactory.CreateDbContextAsync();
            
            // Get current user, club, and admin status
            var userId = await UserContext.GetCurrentUserIdAsync();
            var clubId = await UserContext.GetCurrentUserClubIdAsync();
            var isAdmin = await UserContext.IsAdminAsync();
            
            // First verify template ownership
            var templateQuery = db.ScheduleTemplates.Where(t => t.Id == UI.SelectedTemplateId.Value);
            if (!isAdmin && clubId.HasValue)
            {
                templateQuery = templateQuery.Where(t => t.ClubId == clubId.Value);
            }
            else if (!isAdmin && !clubId.HasValue)
            {
                // User without club sees nothing (backward compatibility: show templates with null ClubId during migration)
                templateQuery = templateQuery.Where(t => t.ClubId == null);
            }
            var templateExists = await templateQuery.AnyAsync();
            
            if (!templateExists)
            {
                groupedTemplates = null;
                return;
            }
            
            var templatesQuery = db.BookingTemplates
                .Include(bt => bt.Group)
                .Include(bt => bt.Area)
                    .ThenInclude(a => a.Place)
                .Where(bt => bt.ScheduleTemplateId == UI.SelectedTemplateId.Value);
            
            // Filter by club through Group
            if (!isAdmin && clubId.HasValue)
            {
                templatesQuery = templatesQuery.Where(bt => bt.Group != null && bt.Group.ClubId == clubId.Value);
            }
            else if (!isAdmin && !clubId.HasValue)
            {
                // User without club sees nothing (backward compatibility: show groups with null ClubId during migration)
                templatesQuery = templatesQuery.Where(bt => bt.Group != null && bt.Group.ClubId == null);
            }
            
            var templates = await templatesQuery.ToListAsync();
            
            // Apply list view filter (separate from SelectedAreaId to not affect other views)
            if (UI.SelectedListFilterAreaId.HasValue)
            {
                // Area filter (more specific - prioritize this)
                templates = templates.Where(bt => bt.AreaId == UI.SelectedListFilterAreaId.Value).ToList();
            }
            else if (UI.SelectedListFilterPlaceId.HasValue)
            {
                // Place filter - filter by all areas in this place
                templates = templates.Where(bt => bt.Area != null && bt.Area.PlaceId == UI.SelectedListFilterPlaceId.Value).ToList();
            }
            // If neither is set, show all (default behavior)
            
            // Group by day (1-7), then by start time, then by location
            groupedTemplates = templates
                .GroupBy(bt => bt.DayOfWeek)
                .OrderBy(g => g.Key)
                .ToDictionary(
                    dayGroup => dayGroup.Key,
                    dayGroup => dayGroup
                        .GroupBy(bt => bt.StartMin)
                        .OrderBy(g => g.Key)
                        .ToDictionary(
                            timeGroup => timeGroup.Key,
                            timeGroup => timeGroup
                                .GroupBy(bt => $"{bt.Area?.Place?.Name ?? "Okänd plats"} - {bt.Area?.Name ?? "Okänd yta"}")
                                .OrderBy(g => g.Key)
                                .ToDictionary(
                                    locationGroup => locationGroup.Key,
                                    locationGroup => locationGroup.OrderBy(bt => bt.Group?.Name ?? "").ToList()
                                )
                        )
                );
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading list view data: {ex.Message}");
        }
    }
    
    private string GetDayName(int dayOfWeek)
    {
        return dayOfWeek switch
        {
            1 => "Måndag",
            2 => "Tisdag", 
            3 => "Onsdag",
            4 => "Torsdag",
            5 => "Fredag",
            6 => "Lördag",
            7 => "Söndag",
            _ => "Okänd dag"
        };
    }
    
    private string FormatTime(int minutes)
    {
        var hours = minutes / 60;
        var mins = minutes % 60;
        return $"{hours:00}:{mins:00}";
    }
    
    private string GetGroupColorBoxStyle(SchedulerMVP.Data.Entities.Group group)
    {
        // Get color from group's DisplayColor, default to Ljusblå if not found
        var displayColor = group.DisplayColor ?? "Ljusblå";
        var colorInfo = SchedulerMVP.Data.Entities.GroupDisplayColors.Colors.GetValueOrDefault(
            displayColor, 
            SchedulerMVP.Data.Entities.GroupDisplayColors.Colors["Ljusblå"]);
        
        return $"background-color: {colorInfo.Background}; border-color: {colorInfo.Border};";
    }
}

