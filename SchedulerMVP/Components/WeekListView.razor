            height: auto !important;
            overflow: visible !important;
            max-height: none !important;
        }
        
        .sa-panel,
        .sa-center-full,
        .sa-center-new {
            display: block !important;
            height: auto !important;
            overflow: visible !important;
            max-height: none !important;
            flex: none !important;
        }
        
        /* Hide navigation and controls */
        .view-type-bar-container,
        .sa-topbar,
