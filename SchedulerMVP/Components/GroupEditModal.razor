@using Microsoft.EntityFrameworkCore
@using SchedulerMVP.Data
@inject IDbContextFactory<AppDbContext> DbFactory
@inject SchedulerMVP.Services.IGroupTypeService GroupTypes

@if (IsOpen && Group != null)
{
    <div class="modal-container" @onclick="OnBackdrop">
        <div class="bm-modal" @onclick:stopPropagation="true">
            <div class="bm-header">
                <h2 class="bm-title">Redigera grupp</h2>
            </div>
            <div class="bm-modal-content">
                <div class="bm-field">
                <label class="bm-label">Gruppnamn</label>
                <input class="bm-input" value="@editName" @oninput="OnNameInput" />
            </div>
            <div class="bm-field">
                <label class="bm-label">Grupptyp</label>
                <select class="bm-input" value="@editTypeId" @onchange="OnTypeChange">
                    <option value="">V채lj grupptyp</option>
                    @foreach (var t in types)
                    {
                        <option value="@t.Id">@t.Name</option>
                    }
                </select>
            </div>
            <div class="bm-field">
                <label class="bm-label">Visningsf채rg</label>
                <select class="bm-input" value="@editDisplayColor" @onchange="OnDisplayColorChange">
                    @foreach (var color in SchedulerMVP.Data.Entities.GroupDisplayColors.Colors.Keys)
                    {
                        <option value="@color">@color</option>
                    }
                </select>
            </div>
            </div>
            <div class="bm-actions">
                <button type="button" @onclick="OnCancel" class="btn-outline">Avbryt</button>
                <button type="button" @onclick="OnSave" class="btn-primary" disabled="@string.IsNullOrWhiteSpace(editName)">Spara</button>
            </div>
        </div>
    </div>
    <style>
        .modal-container{position:fixed;top:0;left:0;right:0;bottom:0;background:rgba(0,0,0,0.45);z-index:4000;display:flex;justify-content:center;align-items:flex-start;padding-top:50px;overflow-y:auto}
        .bm-modal{background:#fff;color:#0f1720;padding:28px 28px 0 28px;border:1px solid #e6e7ea;border-radius:12px;width:480px;box-shadow:0 8px 28px rgba(16,24,40,.18);max-height:80vh;overflow-y:auto;display:flex;flex-direction:column;gap:12px}
        .bm-title{font-size:18px;font-weight:700;color:#0f1720;margin:0}
        .bm-field{margin-bottom:16px}
        .bm-label{display:block;font-size:12px;font-weight:500;color:#374151;margin-bottom:6px}
        .bm-input{width:100%;padding:10px 12px;border-radius:4px;border:1px solid #dcdee2;background-color:#f3f5f7;box-shadow:0 2px 8px 0 rgba(0,0,0,0.02);font-size:12px;font-family:Inter,system-ui,-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif;box-sizing:border-box;min-height:40px}
        .bm-actions{display:flex;gap:12px;justify-content:flex-end;margin-top:8px;position:sticky;bottom:0;background:#fff;border-top:1px solid #e6e7ea;padding-top:12px;padding-bottom:28px;z-index:10}
    </style>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public SchedulerMVP.Data.Entities.Group? Group { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnSaved { get; set; }

    private string editName = string.Empty;
    private string? editTypeId;
    private string editDisplayColor = "Ljusbl책";
    private List<SchedulerMVP.Data.Entities.GroupType> types = new();

    protected override async Task OnParametersSetAsync()
    {
        if (IsOpen && Group != null)
        {
            editName = Group.Name;
            editTypeId = null;
            editDisplayColor = Group.DisplayColor;
            types = await GroupTypes.GetTypesAsync();
            
            // Find type ID from GroupType name
            if (!string.IsNullOrEmpty(Group.GroupType))
            {
                var type = types.FirstOrDefault(t => t.Name == Group.GroupType);
                if (type != null)
                {
                    editTypeId = type.Id.ToString();
                }
            }
        }
    }

    private void OnNameInput(ChangeEventArgs e)
    {
        editName = e.Value?.ToString() ?? string.Empty;
    }

    private void OnTypeChange(ChangeEventArgs e)
    {
        editTypeId = e.Value?.ToString();
    }

    private void OnDisplayColorChange(ChangeEventArgs e)
    {
        editDisplayColor = e.Value?.ToString() ?? "Ljusbl책";
    }

    private async Task OnSave()
    {
        if (Group == null || string.IsNullOrWhiteSpace(editName)) return;

        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var group = await db.Groups.FindAsync(Group.Id);
            if (group != null)
            {
                group.Name = editName;
                group.DisplayColor = editDisplayColor;
                
                if (!string.IsNullOrEmpty(editTypeId) && Guid.TryParse(editTypeId, out var typeId))
                {
                    var type = types.FirstOrDefault(t => t.Id == typeId);
                    group.GroupType = type?.Name;
                }
                else
                {
                    group.GroupType = null;
                }
                
                await db.SaveChangesAsync();
                await OnSaved.InvokeAsync();
                await CloseAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[GroupEditModal] Error saving: {ex.Message}");
        }
    }

    private async Task OnCancel() => await CloseAsync();
    private async Task OnBackdrop(MouseEventArgs _) => await CloseAsync();

    private async Task CloseAsync()
    {
        IsOpen = false;
        await OnClose.InvokeAsync();
    }
}
