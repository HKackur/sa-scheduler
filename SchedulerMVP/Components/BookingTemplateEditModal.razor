    private static List<string> GenerateTimes(int stepMin)
    {
        var list = new List<string>();
        for (var m = 0; m < 24 * 60; m += Math.Max(5, stepMin))
        {
            list.Add(MinutesToString(m));
        }
        list.Add("24:00"); // allow selecting end at midnight
        return list;
    }
