@using Microsoft.EntityFrameworkCore
@using SchedulerMVP.Data
@inject IDbContextFactory<AppDbContext> DbFactory
@inject SchedulerMVP.Services.IGroupTypeService GroupTypes
@inject SchedulerMVP.Services.UserContextService UserContext
@inject SchedulerMVP.Services.IGroupService GroupService

@if (IsOpen)
{
    <div class="modal-container" @onclick="OnBackdrop">
        <div class="bm-modal" @onclick:stopPropagation="true">
            <div class="bm-header">
                <h2 class="bm-title">Skapa ny grupp</h2>
            </div>
            <div class="bm-modal-content">
                <div class="bm-field">
                    <label class="bm-label">Gruppnamn</label>
                    <input class="bm-input" @bind="newGroupName" />
                </div>
                <div class="bm-field">
                    <label class="bm-label">Grupptyp</label>
                    <select class="bm-input" value="@selectedTypeId" @onchange="OnTypeChanged">
                        <option value="">Välj grupptyp</option>
                        @foreach (var t in types)
                        {
                            <option value="@t.Id">@t.Name</option>
                        }
                    </select>
                </div>
                <div class="bm-field">
                    <label class="bm-label">Visningsfärg</label>
                    <select class="bm-input" @bind="selectedDisplayColor" @bind:event="onchange">
                        @foreach (var color in SchedulerMVP.Data.Entities.GroupDisplayColors.Colors.Keys)
                        {
                            <option value="@color">@color</option>
                        }
                    </select>
                </div>
            </div>
            <div class="bm-actions">
                <button type="button" @onclick="OnCancel" class="btn-outline">Avbryt</button>
                <button type="button" @onclick="OnSave" class="btn-primary" disabled="@(string.IsNullOrWhiteSpace(newGroupName) || string.IsNullOrEmpty(selectedTypeId))">Skapa grupp</button>
            </div>
        </div>
    </div>
    <style>
        .modal-container{position:fixed;top:0;left:0;right:0;bottom:0;background:rgba(0,0,0,0.45);z-index:4000;display:flex;justify-content:center;align-items:flex-start;padding-top:50px;overflow-y:auto}
        .bm-modal{background:#fff;color:#0f1720;padding:28px 28px 0 28px;border:1px solid #e6e7ea;border-radius:12px;width:480px;box-shadow:0 8px 28px rgba(16,24,40,.18);max-height:80vh;overflow-y:auto;display:flex;flex-direction:column;gap:12px}
        .bm-header{margin-bottom:20px}
        .bm-title{font-size:18px;font-weight:700;color:#0f1720;margin:0}
        .bm-field{margin-bottom:16px}
        .bm-label{display:block;font-size:12px;font-weight:500;color:#374151;margin-bottom:6px}
        .bm-input{width:100%;padding:10px 12px;border-radius:4px;border:1px solid #dcdee2;background-color:#f3f5f7;box-shadow:0 2px 8px 0 rgba(0,0,0,0.02);font-size:12px;font-family:Inter,system-ui,-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif;box-sizing:border-box;min-height:40px}
        .bm-actions{display:flex;gap:12px;justify-content:flex-end;margin-top:8px;position:sticky;bottom:0;background:#fff;border-top:1px solid #e6e7ea;padding-top:12px;padding-bottom:28px;z-index:10}
    </style>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnCreated { get; set; }

    private string newGroupName = string.Empty;
    private string? selectedTypeId;
    private string selectedDisplayColor = "Ljusblå";
    private List<SchedulerMVP.Data.Entities.GroupType> types = new();

    protected override async Task OnParametersSetAsync()
    {
        if (IsOpen)
        {
            types = await GroupTypes.GetTypesAsync();
            newGroupName = string.Empty;
            selectedTypeId = null;
            selectedDisplayColor = "Ljusblå";
        }
    }
    
    private void OnTypeChanged(ChangeEventArgs e)
    {
        selectedTypeId = e.Value?.ToString();
        // Update display color to match group type's standard color
        if (!string.IsNullOrEmpty(selectedTypeId))
        {
            var type = types.FirstOrDefault(x => x.Id.ToString() == selectedTypeId);
            if (type != null && !string.IsNullOrEmpty(type.StandardDisplayColor))
            {
                selectedDisplayColor = type.StandardDisplayColor;
            }
        }
    }

    private void OnBackdrop()
    {
        OnCancel();
    }

    private void OnCancel()
    {
        newGroupName = string.Empty;
        selectedTypeId = null;
        selectedDisplayColor = "Ljusblå";
        OnClose.InvokeAsync();
    }

    private async Task OnSave()
    {
        try
        {
            var name = (newGroupName ?? string.Empty).Trim();
            if (string.IsNullOrEmpty(name) || string.IsNullOrEmpty(selectedTypeId)) return;
            
            var type = types.FirstOrDefault(x => x.Id.ToString() == selectedTypeId);
            if (type == null) return;
            
            // Use GroupService which handles ClubId and cache invalidation
            var g = new SchedulerMVP.Data.Entities.Group 
            { 
                Id = Guid.NewGuid(), 
                Name = name, 
                GroupType = type.Name, 
                Source = "Egen",
                DisplayColor = selectedDisplayColor
            };
            
            await GroupService.CreateGroupAsync(g);
            
            newGroupName = string.Empty;
            selectedTypeId = null;
            selectedDisplayColor = "Ljusblå";
            
            await OnCreated.InvokeAsync();
            await OnClose.InvokeAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[CreateGroupModal] Error creating group: {ex.Message}");
        }
    }
}
