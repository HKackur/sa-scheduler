    private async Task OnCreate()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(name))
            {
                // Don't create if name is empty
                return;
            }

            if (!int.TryParse(durationText, out var duration)) duration = 90;
            var place = new SchedulerMVP.Data.Entities.Place { Name = name, DefaultDurationMin = duration };
            place = await PlaceService.CreatePlaceAsync(place);

            // Generate areas/leafs by type per PromptSpec 8, using dynamic structure
            if (type == "Plan")
            {
                // Flatten all kvartsplan names into a single list
                var allLeafs = kvartsplanNames.SelectMany(x => x).ToList();
                await PlaceService.GenerateFootballTemplateAsync(place.Id, helplanName, halvplanNames, kvartsplanNames);
            }
            else if (type == "Hall")
            {
                await PlaceService.GenerateCustomTemplateAsync(place.Id, hallName, hallYtaNames);
            }
            else if (type == "Simhall")
            {
                if (split)
                {
                    // Säkerställ att laneNamesPerHalf är korrekt initialiserad
                    if (laneNamesPerHalf == null || laneNamesPerHalf.Count != halfNames.Count)
                    {
                        laneNamesPerHalf = new List<List<string>>();
                        foreach (var halfName in halfNames)
                        {
                            var letter = halfName.Last(); // Get the letter (A, B, etc.)
                            laneNamesPerHalf.Add(Enumerable.Range(1, 8).Select(i => $"{letter}{i}").ToList());
                        }
                    }
                    // Använd hierarkisk struktur (liknande Plan-typen)
                    await PlaceService.GeneratePoolTemplateAsync(place.Id, poolName, halfNames, laneNamesPerHalf);
                }
                else
                {
                    // Använd flat struktur när split är false
                    if (laneNames == null || laneNames.Count == 0)
                    {
                        Console.WriteLine("Error: No lanes to create");
                        return;
                    }
                    await PlaceService.GeneratePoolTemplateAsync(place.Id, laneNames, false, poolName, null, null);
                }
            }
            else if (type == "Annat")
            {
                if (useZones)
                {
                    // Flatten all yta names into a single list for each zone
                    var allYtas = ytaNames.SelectMany(x => x).ToList();
                    await PlaceService.GenerateCustomTemplateAsync(place.Id, customTopName, zoneNames, ytaNames);
                }
                else
                {
                    await PlaceService.GenerateCustomTemplateAsync(place.Id, customTopName, customLeafs);
                }
            }

            IsOpen = false;
            await OnCreated.InvokeAsync();
            UI.RaiseChanged(); // Trigger UI refresh
            await OnClose.InvokeAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating place: {ex.Message}");
            Console.WriteLine($"Stack: {ex.StackTrace}");
            // Show error to user (you might want to add a toast notification here)
            // Don't close modal on error - let user try again
            throw; // Re-throw to see error in browser console
        }
    }

